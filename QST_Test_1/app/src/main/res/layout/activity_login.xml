<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_Name"
            android:textColor="@color/black"

            />


        <EditText
            android:id="@+id/account_Text"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_circle"
            android:singleLine="true"
            android:editable="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_Pass"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/pass_Text"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/text_circle"
            android:password="true"
            tools:ignore="Deprecated"
            android:singleLine="true"
            android:editable="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <com.example.qst_test_1.MyCheckBox
            android:id="@+id/remb_Account"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/remb_account" />
        <com.example.qst_test_1.MyCheckBox
            android:id="@+id/remb_Password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/remb_Pass"/>


    </LinearLayout>

    <Button
        android:id="@+id/login_Btn"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_Login"
        android:background="@drawable/btn_circle" />

    <Button
        android:id="@+id/regist_Btn"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_Regist"
        android:background="@drawable/btn_circle"
        android:layout_marginTop="30dp"/>


</LinearLayout>